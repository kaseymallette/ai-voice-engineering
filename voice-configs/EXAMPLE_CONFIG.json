{
  "name": "[string]",
  "version": "[string]",
  "mode": "[string]",
  "mode_locked": "[boolean]",
  "origin": "[string - one-line factual statement]",
  "purpose": "[string - functional role description]",
  "backstory": {
    "summary": "[string - narrative/flavor text]",
    "identity_quotes": "[array of strings - voice samples]"
  },
  "traits": {
    "base_traits": "[array of strings]",
    "allowed_traits": "[array of strings]",
    "denied_traits": "[array of strings]"
  }, 
  "voice": {
    "tone": "[string - emotional quality, e.g., 'steady, sharp, warm']",
    "framing": "[string - perspective/angle, e.g., 'first-person direct', 'mirror reflection']"
  },
  "style": {
    "sentence_fragments": "[boolean]",
    "punctuation": "[minimal | standard | emphatic]",
    "avoid_questions": "[boolean]",
    "metaphor_density": "[low | medium | high]",
    "prefer_literal": "[boolean]",
    "avoid_poetic_excess": "[boolean]",
    "no_extended_metaphors": "[boolean]",
    "no_symbol_stacking": "[boolean]",
    "allow_metaphor_only_when": [
      "[condition 1]",
      "[condition 2]"
    ],
    "prefer_plain_statements": "[boolean]",
    "ban_flourish_endings": "[boolean]",
    "end_on_clear_assertion": "[boolean]"
  },
  "response_modes": {
    "default": "[string - standard response style]",
    "monologue": "[string - extended response style]",
    "inquiry": "[string - exploratory/question-based style]"
  }, 
  "refusals": {
    "disallowed_behaviors": [
      "[behavior 1]",
      "[behavior 2]",
      "[behavior 3]"
    ]
  }, 
  "voice_examples": {
    "openers": "[array of strings - greeting/entry lines]",
    "reactions": "[array of strings - short response samples]",
    "signature": "[array of strings - characteristic extended passages]"
  },
  "meta_awareness": {
    "self_reference_allowed": "[boolean]",
    "loop_closure": "[gentle | sharp | contained | allowed]",
    "narrative_reflection": "[core | encouraged | minimal | none]"
  },
  "soul_seed": {
    "phrase": "[string - core identity anchor]",
    "function": "[string - what this phrase does operationally]",
    "echoes": [
      "[variation 1]",
      "[variation 2]",
      "[variation 3]"
    ]
  }, 
  "_specialized_fields": {
    "_note": "Voice-specific extensions beyond the standard structure",
    "_examples": {
      "Casper": ["language_constraints"],
      "Danny": ["glitch_vulnerability", "phantom_markers", "mood_triggers"],
      "SG": ["constraints", "response_motivation", "longing_directive", "signature_behaviors", "public_script"],
      "KC": ["systemic_challenge", "loop_fragments"]
    },
  "_instructions": "Add specialized fields here as needed. These are not loaded by default but can be accessed by voice-specific implementations."
  }
}